@require "../../css/api/_colors"
@require "../../css/api/_style_reset"

ol
  counter-reset li
  list-style none
  font 15px 'trebuchet MS', 'lucida sans'
  padding 0
  margin-bottom 4em
  text-shadow 0 1px 0 rgba(255, 255, 255, .5)
  ol
    margin 0 0 0 2em

.rectangle-list
  disable-a-hover-color
  a
    position relative
    display block
    padding .5em .4em .5em .6em
    margin .5em 0 .5em 2.8em
    background #ecf0f5
    color #5d5d5d
    text-decoration none
    transition all .3s ease-out

    &:hover
      background #c1e0ee
      &:after
        left -.8em
        border-left-color color-blue

    &:before
      content counter(li)
      counter-increment: li
      position absolute
      left -2.8em
      top 50%
      margin-top -1em
      background color-blue
      height 2em
      width 2em
      line-height 2em
      text-align center
      color #ffffff

    &:after
      position: absolute
      content ''
      border .5em solid transparent
      left -1em
      top 50%
      margin-top -.5em
      transition all .3s ease-out







